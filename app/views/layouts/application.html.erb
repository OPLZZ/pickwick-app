<!DOCTYPE html>
<html>
<head>

  <title>Dáme Práci</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>

  <meta charset="utf-8">

  <link href="<%= image_path("favicon.ico") %>" rel="shortcut icon">
  <!-- iPad Settings -->
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  <meta name="format-detection" content="telephone=yes">
  <meta name="viewport" content="initial-scale=1, maximum-scale=1"/>

  <!-- iOS ICONS -->
  <link rel="apple-touch-icon" sizes="144x144" href="<%= image_path("icon-144.png") -%>" />
  <link rel="apple-touch-icon" sizes="114x114" href="<%= image_path("icon-114.png") -%>" />
  <link rel="apple-touch-icon" sizes="72x72" href="<%= image_path("icon-72.png") -%>" />
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="<%= image_path("icon-144.png") -%>" />
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="<%= image_path("icon-114.png") -%>" />
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="<%= image_path("icon-72.png") -%>" />
  <!-- iOS ICONS END -->

  <!-- iPhone SPLASHSCREEN-->
  <link href="<%= image_path("apple-touch-startup-image-320x460.jpg") -%>" media="(device-width: 320px) and (orientation: portrait)" rel="apple-touch-startup-image">
  <!-- iPhone SPLASHSCREEN (landscape)-->
  <link href="<%= image_path("apple-touch-startup-image-460x320.jpg") -%>" media="(device-width: 320px) and (orientation: landscape)" rel="apple-touch-startup-image">
  <!-- iPhone (Retina) SPLASHSCREEN-->
  <link href="<%= image_path("apple-touch-startup-image-640x920.jpg") -%>" media="(device-width: 320px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image">
  <!-- iPad (portrait) SPLASHSCREEN-->
  <link href="<%= image_path("apple-touch-startup-image-768x1004.jpg") -%>" media="(device-width: 768px) and (orientation: portrait)" rel="apple-touch-startup-image">
  <!-- iPad (landscape) SPLASHSCREEN-->
  <link href="<%= image_path("apple-touch-startup-image-748x1024.jpg") -%>" media="(device-width: 768px) and (orientation: landscape)" rel="apple-touch-startup-image">
  <!-- iPad (Retina, portrait) SPLASHSCREEN-->
  <link href="<%= image_path("apple-touch-startup-image-1536x2008.jpg") -%>" media="(device-width: 1536px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image">
  <!-- iPad (Retina, landscape) SPLASHSCREEN-->
  <link href="<%= image_path("apple-touch-startup-image-2048x1496.jpg") -%>" media="(device-width: 1536px)  and (orientation: landscape) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image">
</head>
<body>
<% if Rails.env != "build_ios" && Rails.env != "build_android" %>
  <!-- Google Tag Manager -->
  <noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-WW36MJ"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-WW36MJ');</script>
  <!-- End Google Tag Manager -->
<% end %>
<div id='main_container'>
  <div id="web_header">
    <%= yield %>
  </div>

  <div id="application_container">
    <div id="application">
    </div>
  </div>

  <div id="web_footer">
    <%= render template: 'root/footer' %>
  </div>

</div>
</body>
</html>
